<div class="row">
  <br/><br/>
  <br/>
</div>
<p id="notice"><%= notice %></p>
<div class="panel panel-default">
<div class="panel-heading"><h3><%= @product.name %></h3>
<div align="right">
<%= link_to  edit_product_path(@product) ,:class => 'btn btn-info',:title => 'Edit', :rel => 'tooltip' do %>

              <span class="glyphicon glyphicon-edit"></span> Edit  
              <% end %>
<%= link_to  products_path , class: "btn btn-default", :title => 'Back', :rel => 'tooltip' do %>
<span class="glyphicon glyphicon-step-backward"></span> Back
<% end %>
</div>
</div>

  <div class="panel-body">

<table id=t01 class="table table-striped table-hover">
      <tr>
        <th>Product Image</th>
        <td ><%= image_tag @product.image.url(:medium) %></td>
      </tr>
      <tr>
        <th>Product Name : </th>
        <td > <%= @product.name %></td>
      </tr>
      <tr>
        <th>Sku:</th>
        <td > <%= @product.sku %></td>
      </tr>
      <tr>
        <th>Mfupc:</th>
        <td > <%= @product.MFUPC %></td>
      </tr>
      <tr>
        <th>Cost price:</th>
        <td ><%= @product.cost_price %></td>
      </tr>
      <tr>
        <th>Retail price: </th>
        <td > <%= @product.retail_price %></td>
      </tr>
      <tr>
        <th>Storage type:</th>
        <td > <%= @product.storage_type %></td>
      </tr>
      <tr>
        <th>Available minimum Quantity :</th>
        <td > <%= @product.avail_min_qty %></td>
      </tr>
      <tr>
        <th>Weight:</th>
        <td ><%= @product.weight %></td>
      </tr>
      <tr>
        <th>Height: </th>
        <td > <%= @product.height %></td>
      </tr>
      <tr>
        <th>Width:</th>
        <td > <%= @product.width %></td>
      </tr>
      <tr>
        <th>Depth:</th>
        <td > <%= @product.depth %></td>
      </tr>
       <tr>
        <th>Buffer stock:</th>
        <td ><%= @product.buffer_stock %></td>
      </tr>
      <tr>
        <th>Is sample: </th>
        <td > <%= @product.is_sample %></td>
      </tr>
      <tr>
        <th>Company:</th>
        <td > <%= @product.company %></td>
      </tr>
      <tr>
        <th>Merchant:</th>
        <td > <%= @product.merchant %></td>
      </tr>
    </table>


  </div>
</div>
