<div class="row">
  <div class="col-md-12">
    <h1 style="color:white;">Listing customers</h1>
    <br />
    <%= link_to new_customer_path, :class => 'btn btn-md btn-default',:title => 'Add New Customer', :rel => 'tooltip' do %>
    <span class="glyphicon glyphicon-user"></span> New Customer 
    <% end %>
    <br /><br />
    <table class="table table-striped table-hovered" id="t01">
      <tr>
        <th>First Name</th>
        <th>last Name</th>
        <th>Mobile</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.mobile %></td>
        <td><%= customer.email %></td>

        <td><%= link_to customer_path(customer), :class => 'btn btn-xs btn-warning',:title => 'Show', :rel => 'tooltip' do%>
              <span class="glyphicon glyphicon-eye-open"></span> Show
              <%end%></td>
        <td><%= link_to edit_customer_path(customer),:class => 'btn btn-xs btn-info',:title => 'Edit', :rel => 'tooltip' do %>
              <span class="glyphicon glyphicon-edit"></span> Edit  
              <% end %></td>
        <td><%= link_to customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-xs btn-danger', :title => 'Delete', :rel => 'tooltip' do %>
              <span class="glyphicon glyphicon-trash"></span> Remove  
              <% end %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


