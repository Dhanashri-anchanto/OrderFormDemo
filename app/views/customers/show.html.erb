<div class="row">
  <br/><br/>
  <br/>
</div>

<p id="notice"><%= notice %></p>
	<div class="panel panel-default">
			<div class="panel-heading"><h3><%= @customer.first_name %> <%=  @customer.last_name %></h3><div align="right"><%= link_to  edit_customer_path(@customer) ,:class => 'btn btn-info',:title => 'Edit', :rel => 'tooltip' do %>

              <span class="glyphicon glyphicon-edit"></span> Edit  
              <% end %>
<%= link_to  customers_path , class: "btn btn-default", :title => 'Back', :rel => 'tooltip' do %>
<span class="glyphicon glyphicon-step-backward"></span> Back
<% end %></div></div>
			<div class="panel-body">
<p>
  <b>First Name:</b>
  <%= @customer.first_name %>
</p>
<p>
  <b>Last Name:</b>
  <%= @customer.last_name %>
</p>

<p>
  <b>Mobile:</b>
  <%= @customer.mobile %>
</p>

<p>
  <b>Email:</b>
  <%= @customer.email %>
</p>

<div class="row">
	<% @addresses.each_with_index do |add, index| %>
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading"> <h6><b>Address No. <%= index + 1%></b></h6></div>
			<div class="panel-body">

					<p>
						<b>Street name:</b>
						<%= add.street_name %>
					</p>

					<p>
						<b>Area name:</b>
						<%= add.area_name %>
					</p>

					<p>
						<b>Landmark:</b>
						<%= add.landmark %>
					</p>

					<p>
						<b>City:</b>
						<%= add.city %>
					</p>

					<p>
						<b>Postal code:</b>
						<%= add.postal_code %>
					</p>

					<p>
						<b>State:</b>
						<%= add.state %>
					</p>

					<p>
						<b>Country:</b>
						<%= add.country %>
					</p>

					<p>
						<b>Street no:</b>
						<%= add.street_no %>
					</p>

				</div>
			</div>
		</div>
		 <% end %>
	</div>
 
</div>
</div>