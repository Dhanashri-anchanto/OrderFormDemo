</div>
 <h1 style="color:white;">Listing line_items</h1>

<table>
  <tr>
    <th>Sku</th>
    <th>Product</th>
    <th>Order</th>
    <th>Description</th>
    <th>Qty</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.sku %></td>
    <td><%= line_item.product_id %></td>
    <td><%= line_item.order_id %></td>
    <td><%= line_item.description %></td>
    <td><%= line_item.qty %></td>
    <td><%= line_item.price %></td>
    <td><%= link_to  line_item, :class => 'btn btn-xs btn-warning',:title => 'Show', :rel => 'tooltip' do%>
              <span class="glyphicon glyphicon-eye-open"></span> Show
              <%end%></td>
    <td><%= link_to  edit_line_item_path(line_item) ,:class => 'btn btn-xs btn-info',:title => 'Edit', :rel => 'tooltip' do %>

              <span class="glyphicon glyphicon-edit"></span> Edit  
              <% end %></td>
    <td><%= link_to  line_item, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-xs btn-danger', :title => 'Delete', :rel => 'tooltip' do %>
              <span class="glyphicon glyphicon-trash"></span> Remove  
              <% end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to  new_line_item_path , :class => 'btn btn-md btn-default',:title => 'Add New Line Item', :rel => 'tooltip' do %>
    <span class="glyphicon glyphicon-pencil"></span> New Address 
    <% end %>
