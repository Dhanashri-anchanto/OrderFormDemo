<h1>Listing addresses</h1>


 <table class="table table-striped">
  <tr>
    <th>Customer First Name</th>
    <th>Customer Last Name</th>
    <th>Street name</th>
    <th>Area name</th>
    <th>Landmark</th>
    <th>City</th>
    <th>Postal code</th>
    <th>State</th>
    <th>Country</th>
    <th>Street no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.customer.first_name %></td>
     <td><%= address.customer.last_name %></td>
    <td><%= address.street_name %></td>
    <td><%= address.area_name %></td>
    <td><%= address.landmark %></td>
    <td><%= address.city %></td>
    <td><%= address.postal_code %></td>
    <td><%= address.state %></td>
    <td><%= address.country %></td>
    <td><%= address.street_no %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

