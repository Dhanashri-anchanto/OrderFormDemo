<div class="row">
  <br/><br/>
  <br/>
</div>
<p id="notice"><%= notice %></p>
  <div class="col-sm-4">
    <div class="panel panel-info">
      <div class="panel-heading"><h3>Order Details</h3></div>

      <p>
        <b>Order no:</b>
        <%= @order.order_no %>
      </p>

      <p>
        <b>Tracking no:</b>
        <%= @order.tracking_no %>
      </p>

      <p>
        <b>Delivery date:</b>
        <%= @order.delivery_date %>
      </p>

      <p>
        <b>Is express delivery:</b>
        <%= @order.is_express_delivery %>
      </p>

      <p>
        <b>Is customer pickup:</b>
        <%= @order.is_customer_pickup %>
      </p>

      <p>
        <b>Delivery slot:</b>
        <%= @order.delivery_slot %>
      </p>

      <p>
        <b>Carrier:</b>
        <%= @order.carrier %>
      </p>

      <p>
        <b>Order currency:</b>
        <%= @order.order_currency %>
      </p>

      <p>
        <b>Order value:</b>
        <%= @order.order_value %>
      </p>

      <p>
        <b>Payment collection:</b>
        <%= @order.payment_collection %>
      </p>

      <p>
        <b>Special instruction:</b>
        <%= @order.special_instruction %>
      </p>


      <%= link_to  edit_order_path(@order) ,:class => 'btn  btn-info',:title => 'Edit', :rel => 'tooltip' do %>

      <span class="glyphicon glyphicon-edit"></span> Edit  
      <% end %>
      <%= link_to  orders_path , class: "btn btn-default", :title => 'Back', :rel => 'tooltip' do %>
      <span class="glyphicon glyphicon-step-backward"></span> Back
      <% end %>

    </div>
  </div>

